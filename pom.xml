        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>com.teknokote</groupId>
    <artifactId>ess</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>ess</name>
    <description>E-Station Service</description>
    <properties>
        <java.version>17</java.version>
        <spring-cloud.version>2023.0.0</spring-cloud.version>
        <start-class>com.teknokote.ess.EssApplication</start-class>
        <org.mapstruct.version>1.5.5.Final</org.mapstruct.version>
        <!-- JaCoCo Properties -->
        <jacoco.version>0.8.11</jacoco.version>
        <sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
        <sonar.coverage.jacoco.xmlReportPaths>${project.build.directory}/site/jacoco/jacoco.xml</sonar.coverage.jacoco.xmlReportPaths>
        <sonar.exclusions>src/main/java/com/teknokote/ess/dto/**/*,src/main/java/com/teknokote/ess/core/service/impl/UserControllerServiceImpl.java,src/main/java/com/teknokote/ess/core/service/shifts/Plan.java,src/main/java/com/teknokote/ess/formation/**,src/main/java/com/teknokote/ess/core/service/base/**,src/main/java/com/teknokote/ess/core/service/cache/**,,src/main/java/com/teknokote/ess/wsserveur/**,src/main/java/com/teknokote/ess/authentification/**,src/main/java/com/teknokote/ess/authentification/**,src/main/java/com/teknokote/ess/core/model/**/*,src/main/java/com/teknokote/ess/core/dao/**/*,src/main/java/com/teknokote/ess/events/**/*,src/main/java/com/teknokote/ess/core/repository/**/*,src/main/java/com/teknokote/ess/controller/upload/**/*,src/main/java/com/teknokote/ess/controller/handler/**/*,src/main/java/com/teknokote/ess/http/logger/**/*,src/main/java/com/teknokote/ess/exceptions/**/*,src/main/java/com/teknokote/ess/core/service/impl/validators/**/*,src/main/java/com/teknokote/ess/controller/**,src/main/java/com/teknokote/ess/core/service/impl/shifts/ShiftPlanningExecutionDetailServiceImpl.java,src/main/java/com/teknokote/ess/core/service/impl/shifts/PumpAttendantCollectionSheetServiceImpl.java,src/main/java/com/teknokote/ess/core/service/impl/shifts/PumpAttendantCollectionSheetDetailServiceImpl.java,src/main/java/com/teknokote/ess/core/service/impl/shifts/PaymentServiceImpl.java,src/main/java/com/teknokote/ess/core/service/impl/CurrencyService.java,src/main/java/com/teknokote/ess/core/service/impl/FunctionServiceImpl.java,src/main/java/com/teknokote/ess/core/service/impl/shifts/AffectedPumpAttendantServiceImpl.java,src/main/java/com/teknokote/ess/EssApplication.java</sonar.exclusions>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.jacoco</groupId>
            <artifactId>jacoco-maven-plugin</artifactId>
            <version>0.8.11</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-tomcat</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-jetty</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-server</artifactId>
            <version>12.0.6</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-openfeign</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-security</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-thymeleaf</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-mail</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-oauth2-resource-server</artifactId>
        </dependency>

        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-spring-boot-starter</artifactId>
            <version>21.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-admin-client</artifactId>
            <version>21.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.hibernate.validator</groupId>
            <artifactId>hibernate-validator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
        <dependency>
            <groupId>com.teknokote</groupId>
            <artifactId>pts-client</artifactId>
            <version>2.8</version>
        </dependency>
        <dependency>
            <groupId>com.teknokote.core</groupId>
            <artifactId>ess-core</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.vaadin.external.google</groupId>
            <artifactId>android-json</artifactId>
            <version>0.0.20131108.vaadin1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-websocket</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.12.0</version>
        </dependency>
        <dependency>
            <groupId>org.mapstruct</groupId>
            <artifactId>mapstruct</artifactId>
            <version>${org.mapstruct.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi</artifactId>
            <version>5.0.0</version>
        </dependency>

        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi-ooxml</artifactId>
